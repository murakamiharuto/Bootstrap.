{
  "compilerOptions": {
    "outDir": "../dist/package",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["dom", "es6"],
    "types": [
      "jasmine",
      "webpack"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "../demo/src/typings.d.ts",
    "./ng2-bootstrap.ts",
    "./core.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../dist/factories"
  }
}
